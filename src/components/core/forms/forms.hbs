{{#if formTextField}}
	{{!-- Needs 'form-field' parent wrapper (eg. <div class="form-field"> or <li class="form-field">) --}}
	<label for="fieldA" class="form-label">Text field <abbr title="This field is mandatory" class="field--mandatory">*</abbr></label>
	<input type="text" id="fieldA" name="text" class="form-field" required>
{{else if formNumberField}}
	<label for="fieldB" class="form-label">Number field <abbr title="This field is mandatory" class="field--mandatory">*</abbr></label>

	{{!-- An example of an <input> element with type="number". The pattern attribute is not required on the number field but it can act as a fallback for browsers which don't implement the number field but support the pattern attribute such as Firefox. Using up and down arrow keys will, in this instance, work within the "min" and "max" values - in increments defined by the "step" attribute. --}}
	<input type="number" id="fieldB" min="12" max="120" step="1" name="age" pattern="\d+" title="This field only accepts number characters" class="form-field" required>
{{else if formEmailField}}
	{{!-- Needs 'form-field' parent wrapper (eg. <div class="form-field"> or <li class="form-field">) --}}
	<label for="fieldC" class="form-label">Email field <abbr title="This field is mandatory" class="field--mandatory">*</abbr></label>

	{{!-- An example of an <input> element with type="email" that must be in the following order: characters@characters.domain (characters followed by an @ sign, followed by more characters, and then a "."  This pattern should deal with most eventualities --}}
	<input type="email" id="fieldC" name="email" pattern="^[a-zA-Z0-9.!#$%&â€™*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$" title="Make sure your email follows a format similar to characters@characters.domain" class="form-field" required>
{{else if formTelephoneField}}
	<label for="fieldD" class="form-label">Telephone field <abbr title="This field is mandatory" class="field--mandatory">*</abbr></label>

	{{!-- An example of an <input> element with type="tel" that should follow the UK phone number format. --}}
	<input type="tel" id="fieldD" name="telephone" pattern="^\s*\(?(020[7,8]{1}\)?[ ]?[1-9]{1}[0-9{2}[ ]?[0-9]{4})|(0[1-8]{1}[0-9]{3}\)?[ ]?[1-9]{1}[0-9]{2}[ ]?[0-9]{3})\s*$" title="This should follow the UK phone number format" class="form-field" required>
{{else if formPasswordField}}
	<label for="fieldE" class="form-label">Password field <abbr title="This field is mandatory" class="field--mandatory">*</abbr></label>

	{{!-- An example of an <input> element with type="password" that must contain 8 or more characters that are of at least one number, and one uppercase and lowercase letter --}}
	<input type="password" id="fieldE" name="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" class="form-field" required>
{{else if formUrlField}}
	<label for="fieldF" class="form-label">URL field</label>

	{{!-- An example of an <input> element with type="url" that must start with http:// or https:// followed by at least one character --}}
	<input type="url" id="fieldF" name="website" pattern="https?://.+" title="Include http:// or https://" class="form-field">
{{else if formSearchField}}
	<label for="fieldG" class="form-label">Search input</label>

	{{!-- An <input> element with type="search" that CANNOT contain the following characters: ' or " --}}
	<input type="search" id="fieldG" name="search" pattern="[^'\x22]+" title="Make sure no single or double-quote characters are present" placeholder="eg. Lessons for cats" aria-describedby="search-tip" class="form-field">

	{{!-- Visually hidden 'tooltip' (below) for benefit of assistive technologies - especially screenreaders --}}
	<span role="tooltip" id="search-tip" class="visuallyhidden">Type something in the search box you'd like to search for</span>
{{else if formTextAreaField}}
	{{!-- Needs 'form-field' parent wrapper (eg. <div class="form-field"> or <li class="form-field">) --}}
	<label for="fieldH" class="form-label">Textarea field <abbr title="This field is mandatory" class="field--mandatory">*</abbr></label>
	<textarea id="fieldH" name="message" maxlength="140" rows="5" placeholder="eg. Some blurb of text can be typed in here..." class="form-field"></textarea>
{{else if formRadioButtons}}
	<fieldset>
		{{!-- When you want to render the <legend> --}}
		<legend class="form-legend">What is Your Favorite Pet?</legend>
		<label for="fieldI" class="form-label">
			<input type="radio" id="fieldI" name="animal" value="Cat" class="form-field">Cats
		</label>
		<label for="fieldJ" class="form-label">
			<input type="radio" id="fieldJ" name="animal" value="Dog" class="form-field">Dogs
		</label>
		<label for="fieldK" class="form-label">
			<input type="radio" id="fieldK" name="animal" value="Monkey" class="form-field">Monkeys
		</label>
	</fieldset>
{{else if formCheckboxButtons}}
	<fieldset>
		{{!-- When you want to render the <legend> --}}
		<legend class="form-legend">Which instruments do you play?</legend>
		<label for="fieldL" class="form-label">
			<input type="checkbox" id="fieldL" name="instrument" value="Drums" class="form-field">Drums
		</label>
		<label for="fieldM" class="form-label">
			<input type="checkbox" id="fieldM" name="instrument" value="Piano" class="form-field">Piano
		</label>
		<label for="fieldN" class="form-label">
			<input type="checkbox" id="fieldN" name="instrument" value="Bass" class="form-field">Bass
		</label>
	</fieldset>
{{else if formSelectDropdown}}
	<label for="fieldO" class="form-label">Which is your favourite country?</label>

	{{!-- This wrapper <div> for the <select> element enables a pseudo element (arrow) to be added to the dropdown --}}
	<div class="field-wrap field--select">
		<select id="fieldO" name="genre" class="form-field">
			<option value="country-all" selected>Country (all)</option>
			<option value="country-uk">United Kingdom</option>
			<option value="country-italy">Italy</option>
			<option value="country-alaska">Alaska</option>
			<option value="country-australia">Australia</option>
		</select>
	</div>
{{else}}
	{{!-- Renders out all available form fields... --}}
	<form action="" class="form">
		<fieldset>
			<legend class="screenreader">Form title</legend>
			<ul class="no-list form-wrap">
				<li class="form-item">
					{{render "@forms--form-text-field"}}
				</li>
				<li class="form-item">
					{{render "@forms--form-number-field"}}
				</li>
				<li class="form-item">
					{{render "@forms--form-email-field"}}
				</li>
				<li class="form-item">
					{{render "@forms--form-telephone-field"}}
				</li>
				<li class="form-item">
					{{render "@forms--form-password-field"}}
				</li>
				<li class="form-item">
					{{render "@forms--form-url-field"}}
				</li>
				<li class="form-item">
					{{render "@forms--form-search-field"}}
				</li>
				<li class="form-item">
					{{render "@forms--form-textarea-field"}}
				</li>
				<li class="form-item">
					{{render "@forms--form-radio-buttons"}}
				</li>
				<li class="form-item">
					{{render "@forms--form-checkbox-buttons"}}
				</li>
				<li class="form-item">
					{{render "@forms--form-select-dropdown"}}
				</li>
			</ul>
		</fieldset>
		<input type="submit" value="Submit" class="button primary">
	</form>
{{/if}}
